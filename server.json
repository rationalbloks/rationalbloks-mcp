{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.rationalbloks/rationalbloks-mcp",
  "title": "RationalBloks",
  "description": "Deploy production REST APIs from JSON schemas in seconds. 18 tools for projects, schemas, and deployments on Kubernetes.",
  "repository": {
    "url": "https://github.com/rationalbloks/rationalbloks-mcp",
    "source": "github"
  },
  "version": "0.6.0",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "rationalbloks-mcp",
      "version": "0.6.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "RATIONALBLOKS_API_KEY",
          "description": "Your RationalBloks API key (get it from rationalbloks.com/settings)",
          "isRequired": true,
          "format": "string",
          "isSecret": true
        }
      ]
    }
  ],
  "remotes": [
    {
      "type": "sse",
      "url": "https://infra.rationalbloks.com/sse",
      "headers": [
        {
          "name": "X-API-Key",
          "description": "Your RationalBloks API key",
          "isRequired": true,
          "isSecret": true
        }
      ]
    }
  ]
}
